{
  "extends": [
    "../tslint.json"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "artifacts/**",
      "**/*.json",
      "**/.*",
      "**/~*"
    ]
  },
  "rules": {
    "no-string-literal": false,
    "no-submodule-imports": [
      true,
      "env",
      "app",
      "shared",
      "resources"
    ]
  }
}
