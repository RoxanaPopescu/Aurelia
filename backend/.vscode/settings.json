{
  // To keep the editor experience focused on development,
  // we exclude auxiliary files that should not be edited,
  // or which are not strictly part of the app code base.
  "files.exclude":
  {
    // Because this is created by the operating system.
    "**/.DS_STORE": true,
    "**/Thumbs.db": true,

    // Because this is a prefix we use to exclude files and folders from Visual Studio Code.
    "**/~~*": true,

    // Because this contains temporary files created by Chrome.
    ".chrome": true,

    // Because this contains files specific to Visual Studio Code.
    ".vscode": true,

    // Because this contains files specific to GitHub.
    ".github": true,

    // Because this is specific to the Git source control system.
    ".git/": true,
    ".gitattributes": true,
    ".gitignore": true,
    "packages/*/.gitattributes": true,
    "packages/*/.gitignore": true,

    // Because this is specific to publishing using NPM.
    ".npmignore": true,
    "packages/*/.npmignore": true,

    // Because this is managed by NPM and should not be edited.
    "package-lock.json": true,
    "packages/*/package-lock.json": true,

    // Because this contains dependencies installed by NPM.
    "node_modules": true,
    "packages/*/node_modules": true,

    // Because this is specific to deployment using Docker.
    // Note that we cannot exclude `dockerfile`, as that
    // breaks the Docker plugin for Visual Studio Code.
    ".dockerignore": true,
    "dockerfile": false,
    "docker-compose.*": false,
    "packages/*/.dockerignore": true,
    "packages/*/dockerfile": false,
    "packages/*/docker-compose.*": false,

    // Because this contains build artifacts.
    "artifacts/": true,
    "packages/*/artifacts/": true
  },

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "javascript.preferences.quoteStyle": "double",
  "typescript.preferences.quoteStyle": "double",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.tsc.autoDetect": "off",
  "editor.formatOnSave": false,
  "editor.defaultFormatter": null
}
