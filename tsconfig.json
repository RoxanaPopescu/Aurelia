{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "es2020",
    "target": "es2018",

    "jsx": "react",
    "noImplicitAny": false,
    "paths": {
      "shared/*": ["shared/*", "legacy/packages/shared/*"],
      "fulfiller/*": ["legacy/packages/fulfiller/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/legacy/node_modules/@types",
    ],
    
    "allowJs": false,
    "declaration": false,
    "declarationMap": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "keyofStringsOnly": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false, // TODO: Should we enable this?
    "strictFunctionTypes": false, // TODO: Should we enable this?
    "stripInternal": true,
    "suppressExcessPropertyErrors": false,
    "suppressImplicitAnyIndexErrors": true,
    "useUnknownInCatchVariables": false,
    "exactOptionalPropertyTypes": false, // TODO: Should we enable this?
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false
      }
    ]
  },
  "exclude": [
    "**/~*"
  ],
  "include": [
    "src"
  ]
}
