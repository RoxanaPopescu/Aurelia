{
  "extends": "../tslint.json",
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "artifacts/**",
      "src/legacy/**",
      "**/*.json",
      "**/.*",
      "**/~*"
    ]
  },
  "rules": {
    "no-submodule-imports": [
      true,
      "env",
      "app",
      "shared",
      "legacy",
      "resources"
    ]
  }
}
