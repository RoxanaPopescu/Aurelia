<!DOCTYPE html>
<html lang="<%- htmlWebpackPlugin.options.environment.locale %>" theme="blue" class="app sideMenu--collapsed">

    <head>

        <!-- Technical metadata -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, viewport-fit=cover">
        <base href="<%- htmlWebpackPlugin.options.environment.appBaseUrl %>">

        <!-- Crawler metadata -->
        <meta name="robots" content="noindex,nofollow">

        <!-- Content metadata -->
        <title>Mover</title>
        <meta name="description" content="Modernize your logistics with Mover.">

        <!-- Standard integration metadata -->
        <link rel="icon" href="/resources/integration/standard/favicon.png" type="image/png">
        <link rel="mask-icon" href="/resources/integration/standard/icon-mask.svg" color="#0747a6">
        <link rel="manifest" href="/resources/integration/standard/manifest.json">
        <meta name="theme-color" content="#0747a6">
        <meta name="application-name" content="Mover">

        <!-- Apple specific integration metadata -->
        <link rel="apple-touch-icon" href="/resources/integration/apple/icon.png">
        <meta name="apple-mobile-web-app-title" content="Mover">

        <!-- Google specific integration metadata -->
        <meta name="google" content="notranslate">

        <!-- Microsoft specific integration metadata -->
        <meta name="msapplication-config" content="/resources/integration/microsoft/browserconfig.xml">
        <meta name="msapplication-navbutton-color" content="#0747a6">

        <!-- Analytics -->
        <%if (htmlWebpackPlugin.options.environment.integrations.googleAnalytics) { %>
        <script async src="https://www.googletagmanager.com/gtag/js?id=<%- htmlWebpackPlugin.options.environment.integrations.googleAnalytics.id %>"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){ dataLayer.push(arguments); }
            gtag("js", new Date());
            gtag("config", "<%- htmlWebpackPlugin.options.environment.integrations.googleAnalytics.id %>");
        </script>
        <% } %>

        <!-- Google Maps -->
        <%if (htmlWebpackPlugin.options.environment.integrations.googleMaps) { %>
        <script src="https://maps.googleapis.com/maps/api/js?key=<%- htmlWebpackPlugin.options.environment.integrations.googleMaps.key %>&libraries=drawing,geometry"></script>
        <% } %>

        <!-- Injected content -->

    </head>

    <body theme-context="app" theme-surface="base">

        <!-- App -->
        <main aurelia-app="index">

            <!-- Splash -->
            <div class="splash">

                <div class="loading-indicator"><div></div><div></div><div></div></div>

                <style>

                    .splash
                    {
                        position: fixed;
                        height: 100vh;
                        width: 100vw;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }

                    .splash .loading-indicator
                    {
                        position: relative;
                        width: 25vh;
                        height: 25vh;
                        opacity: 0.05;
                    }

                    .splash .loading-indicator div
                    {
                        box-sizing: border-box;
                        position: absolute;
                        width: inherit;
                        height: inherit;
                        border: 6px solid #000000;
                        border-radius: 50%;
                        animation: loading-indicator 1.5s cubic-bezier(0.5, 0, 0.5, 1) infinite;
                        border-color: #000000 transparent transparent transparent;
                    }

                    .splash .loading-indicator div:nth-child(1)
                    {
                        animation-delay: -0.5625s;
                    }

                    .splash .loading-indicator div:nth-child(2)
                    {
                        animation-delay: -0.375s;
                    }

                    .splash .loading-indicator div:nth-child(3)
                    {
                        animation-delay: -0.1875s;
                    }

                    @keyframes loading-indicator
                    {
                        0%
                        {
                            transform: rotate(0deg);
                        }

                        100%
                        {
                            transform: rotate(360deg);
                        }
                    }

                </style>

            </div>

        </main>

        <!-- Logging -->
        <%if (htmlWebpackPlugin.options.environment.integrations.sentry) { %>
        <script src="https://browser.sentry-cdn.com/4.6.1/bundle.min.js" crossorigin="anonymous"></script>
        <script>
            Sentry.init({ dsn: "<%- htmlWebpackPlugin.options.environment.integrations.sentry.dsn %>" });
        </script>
        <% } %>

        <!-- Injected content -->

    </body>

</html>
