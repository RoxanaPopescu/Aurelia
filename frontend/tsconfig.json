{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "es2020",
    "target": "es2018",

    "jsx": "react",
    "noImplicitAny": false,
    "paths": {
      "shared/*": ["shared/*", "legacy/packages/shared/*"],
      "fulfiller/*": ["legacy/packages/fulfiller/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/legacy/node_modules/@types",
    ],

  },
  "include": [
    "src"
  ]
}
