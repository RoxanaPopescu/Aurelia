{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "esnext",
    "target": "es2018",

    "jsx": "react",
    "noImplicitAny": false,
    "paths": {
      "shared/*": ["shared/*", "legacy/shared/*"],
      "fulfiller/*": ["legacy/fulfiller/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/legacy/node_modules/@types",
    ],
  },
  "include": [
    "src"
  ]
}
